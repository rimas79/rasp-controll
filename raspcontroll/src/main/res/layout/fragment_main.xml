<TableLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/labelRaspURL"
            android:id="@+id/labelURL" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/raspURL"
            android:layout_weight="1"
            android:inputType="textUri"
            android:text="192.168.10.45:8080" />
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:baselineAligned="false"
        android:layout_gravity="center_horizontal">

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tbConnectCaption"
            android:id="@+id/swConnect"
            android:layout_column="1"
            android:onClick="tbConn_Click"
            android:enabled="false"
            android:checked="false" />
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tbSwitchCaption"
            android:id="@+id/bSwitch"
            android:layout_column="1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ivSwitchStatus"
            android:layout_column="3"
            android:cropToPadding="false"
            android:adjustViewBounds="true"
            android:visibility="visible"
            android:baselineAlignBottom="false"
            android:baseline="30dp"
            android:background="@android:color/darker_gray"
            android:scaleType="matrix"
            android:padding="20dp" />
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <ToggleButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tbLEDCaption"
            android:id="@+id/tbLED"
            android:layout_column="1"
            android:textOff="@string/tbLEDCaption"
            android:textOn="@string/tbLEDCaption"
            android:singleLine="false" />
    </TableRow>

</TableLayout>
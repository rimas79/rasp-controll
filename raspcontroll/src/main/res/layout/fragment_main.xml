<TableLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#d2d2ff">

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/labelRaspURL"
            android:id="@+id/labelURL" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/raspURL"
            android:layout_weight="1"
            android:inputType="textUri"
            android:text="192.168.10.45:8080" />
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:baselineAligned="false"
        android:layout_gravity="center_horizontal">

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tbConnectCaption"
            android:id="@+id/swConnect"
            android:layout_column="1"
            android:onClick="tbConn_Click"
            android:enabled="false"
            android:checked="false" />
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tbSwitchCaption"
            android:id="@+id/bSwitch"
            android:layout_column="1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ivSwStatus"
            android:layout_column="3"
            android:cropToPadding="false"
            android:adjustViewBounds="false"
            android:visibility="visible"
            android:baselineAlignBottom="false"
            android:scaleType="matrix"
            android:src="@drawable/state_button"
            android:background="#ff0000" />

    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <ToggleButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tbLEDCaption"
            android:id="@+id/tbLED"
            android:layout_column="1"
            android:textOff="@string/tbLEDCaption"
            android:textOn="@string/tbLEDCaption"
            android:singleLine="false" />

    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Button"
            android:id="@+id/button" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ivNewStatus"
            android:layout_column="3"
            android:cropToPadding="false"
            android:adjustViewBounds="false"
            android:visibility="visible"
            android:baselineAlignBottom="false"
            android:scaleType="matrix"
            android:src="@drawable/state_button"
            android:background="#ff0000" />
    </TableRow>

</TableLayout>